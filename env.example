# =============================================================================
# CONFIGURATION DU PANEL LOGS Galaxy
# =============================================================================
# Copiez ce fichier vers .env et remplissez les valeurs
# ATTENTION: Ne jamais commiter le fichier .env !
# =============================================================================

# =============================================================================
# CONFIGURATION FLASK (OBLIGATOIRE)
# =============================================================================

# Clé secrète Flask - OBLIGATOIRE EN PRODUCTION
# Générez avec: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=votre_cle_secrete_flask_ici

# Port d'écoute de l'application (défaut: 3001)
PORT=3001

# =============================================================================
# CONFIGURATION JWT (OBLIGATOIRE)
# =============================================================================

# Clé secrète pour les tokens JWT - OBLIGATOIRE EN PRODUCTION
# Générez avec: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=votre_cle_secrete_jwt_ici

# =============================================================================
# CONFIGURATION DISCORD (OBLIGATOIRE)
# =============================================================================

# ID de l'application Discord (Application ID)
# Trouvez-le sur: https://discord.com/developers/applications
DISCORD_CLIENT_ID=123456789012345678

# Secret OAuth2 de l'application Discord
# Trouvez-le dans: OAuth2 > Client Secret
DISCORD_CLIENT_SECRET=votre_client_secret_discord

# Token du bot Discord
# Générez-le dans: Bot > Reset Token
DISCORD_BOT_TOKEN=votre_bot_token_discord

# URI de redirection OAuth2 (doit correspondre à celle configurée sur Discord)
GLOBAL_REDIRECT_URI=https://votre-domaine.com/callback

# =============================================================================
# SUPER ADMINISTRATEUR(S) (OBLIGATOIRE)
# =============================================================================

# ID(s) Discord des super-administrateurs (séparés par des virgules)
# Ces utilisateurs auront accès à TOUS les serveurs et fonctions admin
SUPER_ADMIN_DISCORD_IDS=123456789012345678,987654321098765432

# =============================================================================
# CONFIGURATION CLOUDFLARE TURNSTILE (OPTIONNEL)
# =============================================================================

# Clés Turnstile pour le captcha anti-bot
# Obtenez-les sur: https://dash.cloudflare.com/?to=/:account/turnstile
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# Durée de validité du captcha en secondes (défaut: 600 = 10 minutes)
TURNSTILE_SESSION_TTL=600

# Durée de validité du captcha d'entrée en secondes (défaut: 86400 = 24 heures)
ENTRY_CAPTCHA_TTL=86400

# =============================================================================
# CONFIGURATION GLOBALE
# =============================================================================

# Nom du site affiché dans l'interface
GLOBAL_SITE_NAME=Multi-Server Logs Panel

# Version des assets (utilisé pour le cache busting)
# Changez cette valeur après chaque modification des fichiers CSS/JS
ASSET_VERSION=1.0.0

# Mode debug - Active les logs détaillés (true/false)
DEBUG_MODE=false

# =============================================================================
# PANEL CLIENT (OPTIONNEL)
# =============================================================================
# Permet à des utilisateurs avec un rôle spécifique de créer leurs propres serveurs

# ID du serveur Discord où vérifier le rôle client
CLIENT_DISCORD_GUILD_ID=1381418967306080307

# ID du rôle Discord qui permet de créer des serveurs
CLIENT_DISCORD_ROLE_ID=1381418967306080309

# =============================================================================
# BASE DE DONNÉES PRINCIPALE (OPTIONNEL)
# =============================================================================
# Note: La configuration des BDD par serveur se fait dans servers_config.json

# URI de la base de données principale (si utilisée)
# DATABASE_URI=sqlite:///logs.db